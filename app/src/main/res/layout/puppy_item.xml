<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/puppyImage"
    android:layout_width="0dp"
    android:layout_height="@dimen/puppy_image_height"
    android:contentDescription="@string/puppy_image_content_descriptor"
    android:scaleType="fitXY"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/heartImage"
    android:layout_width="@dimen/heart_size"
    android:layout_height="@dimen/heart_size"
    android:contentDescription="@string/like_icon_content_descriptor"
    android:src="@drawable/heart"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@+id/puppyImage"
    app:layout_constraintEnd_toEndOf="parent"
    tools:visibility="visible" />


</android.support.constraint.ConstraintLayout>